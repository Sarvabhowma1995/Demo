pipeline {
    agent any
     parameters {
        string(name: 'IMAGE_NAME', defaultValue: 'test-image', description: 'Please provide the image name')
     }
	stages{
	    stage('clone repo'){
		 steps{
		   git changelog: false, credentialsId: 'github', poll: false, url: 'https://github.com/Sarvabhowma1995/Demo.git'
		 }
		}
	    stage('Maven Clean Package'){
	        steps{
		        script{
                    sh "mvn clean install"
		        }
		    }
	    }
		stage('Build Docker Image'){
		    steps{
			    sh 'docker build -t ${params.IMAGE_NAME} .'
			}
		}
	    stage('Push Docker Image'){
	        steps{
					withCredentials([string(credentialsId: 'Docker', variable: 'Docker')]) {
						sh "docker login -u jsarvabhowma -p ${Docker}"
		        }
		        sh 'docker push ${IMAGE_NAME}'
	        }
	    }
		stage('Deploy To Kuberates Cluster'){
		    steps{
		         sh 'docker run -d --name sarva -p 808:8080 ${IMAGE_NAME}'
			 
			}
		}
	}
}
