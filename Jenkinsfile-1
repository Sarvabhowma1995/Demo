pipeline {
    agent any
	environment{
	    def mavenHome =  tool name: "Maven", type: "maven"
		def mavenCMD = "${mavenHome}/bin/mvn"
	}
	stages{
	    stage('Maven Clean Package'){
	        steps{
		        script{
                    sh "${mavenCMD} clean package"
		    sh "rm -rf ${JENKINS_HOME}/workspace/*"
		        }
		    }
	    }
	}
}
